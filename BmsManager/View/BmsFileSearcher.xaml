<UserControl x:Class="BmsManager.BmsFileSearcher"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BmsManager"
             d:DataContext="{d:DesignInstance Type=local:BmsFileSearcherViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type local:BmsFileSearcherViewModel}"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Margin="5" Content="検索" Command="{Binding Search}"/>
            <TextBox Grid.Row="0" Grid.Column="1" Margin="5" Text="{Binding SearchText, Mode=TwoWay}"/>
            <Button Grid.Row="0" Grid.Column="2" Margin="5" Content="クリア" Command="{Binding Clear}"/>
            <Button Grid.Row="1" Grid.Column="0" Margin="5" Content="自動リネーム" Command="{Binding AutoRename}"/>
            <TextBox Grid.Row="1" Grid.Column="1" Margin="5" Text="{Binding RenameText, Mode=TwoWay}"/>
            <Button Grid.Row="1" Grid.Column="2" Margin="5" Content="手動リネーム" Command="{Binding Rename}"/>
            <Button Grid.Row="1" Grid.Column="3" Margin="5" Content="DB登録" Command="{Binding Register}"/>
        </Grid>
        <local:BmsFileList Grid.Row="1" DataContext="{Binding FileList}"/>
    </Grid>
</UserControl>
